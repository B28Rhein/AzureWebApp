@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gl-matrix/2.8.1/gl-matrix-min.js"
            integrity="sha512-zhHQR0/H5SEBL3Wn6yYSaTTZej12z0hVZKOv3TwCUXT1z5qeqGcXJLLrbERYRScEDDpYIJhPC1fk31gqR783iQ=="
            crossorigin="anonymous"
            defer></script>
    <script src="~/js/site.js" type="module" id="s" ></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
    <title>@ViewData["Title"] - AzureWebpage</title>
</head>
<body style="height:100%">
    <div class="container-fluid h-100">
        <div class="row min-vh-100">
            <div class="col-sm bg-dark d-flex flex-column">
                <a name="translatable" id="#outventory">#outventory</a>
                <div class="row ms-4 mt-4 flex-grow-1 flex-column" id="inventoryView">
                </div>
                <a name="translatable" id="#stats">#stats</a>
                <div class="row ms-4 flex-grow-1 flex-column" id="statView">
                </div>
            </div>
            <div class="col-sm bg-black">
                <canvas id="gl-canvas" width="640" height="490"></canvas>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <a id="#health" name="translatable">#health</a> = <a id="health"></a>/<a id="maxHealth"></a>
                        </div>
                        <div class="col-sm">
                            <a id="#exp" name="translatable">#exp</a> = <a id="exp"></a>/<a id="maxExp"></a>
                        </div>
                    </div>
                    
                </div>
                <div class="d-sm-flex justify-content-center">
                    <div class="btn-group-vertical" role="group">
                        <div class="btn-group">
                            <button class="btn btn-dark btn-lg" disabled></button>
                            <button class="btn btn-dark btn-lg" id="Up">🢁</button>
                            <button class="btn btn-dark btn-lg" disabled></button>
                        </div>
                        
                        <div class="btn-group">
                            <button class="btn btn-dark btn-lg" id="Left">🢀</button>
                            <button class="btn btn-dark btn-lg" id="Interact">○</button>
                            <button class="btn btn-dark btn-lg" id="Right">🢂</button>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-dark btn-lg" disabled></button>
                            <button class="btn btn-dark btn-lg" id="Down">🢃</button>
                            <button class="btn btn-dark btn-lg" disabled></button>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-sm bg-dark">
                <button class="btn-light" id="plBTN">Polish</button>
                <button class="btn-light" id="enBTN">English</button>
                <button class="btn-light" id="frBTN">French</button>
            </div>
        </div>
        
    </div>
    
</body>

